pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
#include snake.lua
#include vector.lua

-- main.p8

function _init()
    snake = Snake.new(100, 64, 40, 5)
end


function _update()
    if btn(⬅️) then
        snake.points[1][1] -= 1
    elseif btn(➡️) then
        snake.points[1][1] += 1
    end

    if btn(⬆️) then
        snake.points[1][2] -= 1
    elseif btn(⬇️) then
        snake.points[1][2] += 1
    end
    
    snake:constrain()
end


function _draw()
    cls()
    
    snake:draw()
end


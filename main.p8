pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
#include snake.lua
#include vector.lua

-- main.p8

function _init()
    printh(" ")

    snake = Snake.new(100, 64, 40, 2)
    snake_girth = 3
    snake_lines = snake:get_outer_lines(3)
end


function _update()
    if btn(⬅️) then
        snake.points[1][1] -= 1
    elseif btn(➡️) then
        snake.points[1][1] += 1
    end

    if btn(⬆️) then
        snake.points[1][2] -= 1
    elseif btn(⬇️) then
        snake.points[1][2] += 1
    end
    
    snake:constrain()
    snake_lines = snake:get_outer_lines(3)
end


function _draw()
    cls()
    
    for curr_line in all(snake_lines) do
        line(curr_line[1][1], curr_line[1][2], curr_line[2][1], curr_line[2][2], 7)
    end
end

